{
  "compilerOptions": {
    "target": "es2020", // Or newer
    "module": "commonjs", // Or "esnext" if you prefer ES modules
    "rootDir": "./",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "**/*.spec.ts"],
  "paths": {
    "@/*": ["./*"]
  }
}
